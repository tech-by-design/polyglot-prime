			<version>1.322</version>
		</dependency>
		<dependency>
			<groupId>io.github.wimdeblauwe</groupId>
			<artifactId>htmx-spring-boot</artifactId>
			<version>3.4.1</version>
		</dependency>
		<dependency>
			<groupId>io.github.wimdeblauwe</groupId>
