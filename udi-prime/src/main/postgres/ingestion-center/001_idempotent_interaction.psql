					AND ((sihr.payload ->> 'insertScreeningsResponse'::text) = 'Record Successfully Added to DB'::text 
					OR (sihr.payload ->> 'insert_screeningsResponse'::text) = 'Record Successfully Added to DB'::text)
					 
