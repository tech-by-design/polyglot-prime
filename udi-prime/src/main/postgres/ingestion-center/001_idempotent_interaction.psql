/*******************************************************************************************
This view aggregates data from two tables: 'hub_interaction' and 'sat_interaction_http_request'.
The view includes various fields related to interactions and HTTP requests, extracting relevant 
details from JSON fields and providing computed columns.
******************************************************************************************/
DROP MATERIALIZED VIEW IF EXISTS techbd_udi_ingress.interaction_http_request_mat CASCADE;
CREATE MATERIALIZED VIEW IF NOT EXISTS techbd_udi_ingress.interaction_http_request_mat AS
SELECT hi.hub_interaction_id AS hub_interaction_id,
	sihr.sat_interaction_http_request_id,
    hi.key AS uri,
    hi.created_at AS interaction_created_at,
    hi.created_by AS interaction_created_by,
    hi.provenance AS interaction_provenance,
    sihr.nature ->> 'nature'::text AS nature,
    sihr.nature ->> 'tenant_id'::text AS tenant_id,
    COALESCE((sihr.payload -> 'request'::text) ->> 'userAgent'::text, sihr.nature ->> 'userAgent'::text) AS user_agent,
    COALESCE((sihr.payload -> 'request'::text) ->> 'clientIpAddress'::text, sihr.nature ->> 'clientIpAddress'::text) AS client_ip_address,
    sihr.content_type,
    sihr.elaboration,
    sihr.from_state,
    sihr.to_state,
    sihr.state_transition_reason,
    sihr.created_at AS request_created_at,
    sihr.created_by AS request_created_by,
    sihr.provenance AS request_provenance,
    jsonb_array_length((((((sihr.payload -> 'response'::text) -> 'responseBody'::text) -> 'OperationOutcome'::text) -> 'validationResults'::text) -> 0) -> 'issues'::text) AS issues_count,
    sihr.payload,
    LOWER(COALESCE(sihr.tenant_id_denorm,sihr.nature ->> 'tenant_id')) AS tenant_id_lower,
    CURRENT_USER AS materialized_by,
    CURRENT_TIMESTAMP AS materialized_at,
    CASE 
    WHEN sihr.nature ->> 'nature' = 'org.techbd.service.http.Interactions$RequestResponseEncountered'
    THEN (
        SELECT h->>'value' 
        FROM jsonb_array_elements((sihr.payload -> 'request') -> 'headers') AS h
        WHERE h ->> 'name' = 'x-forwarded-for'
    )
    ELSE NULL END AS client_ip_address_forwarded
   	FROM techbd_udi_ingress.hub_interaction hi
   	INNER JOIN techbd_udi_ingress.sat_interaction_http_request sihr 
   	ON hi.hub_interaction_id = sihr.hub_interaction_id
WITH NO DATA;
  
   
/*******************************************************************************************
This view aggregates resource types from HTTP request payloads associated with interactions 
that match specific criteria.
******************************************************************************************/
  DROP MATERIALIZED VIEW IF EXISTS techbd_udi_ingress.interaction_http_request_resource_type_mat CASCADE;
  CREATE MATERIALIZED VIEW IF NOT EXISTS techbd_udi_ingress.interaction_http_request_resource_type_mat AS
  SELECT 
  sihr.sat_interaction_http_request_id,
  sihr.hub_interaction_id,  
  string_agg(DISTINCT (entry.value -> 'resource'::text) ->> 'resourceType'::text, ', '::text) AS resource_types
  FROM 
  techbd_udi_ingress.hub_interaction hintr
  JOIN techbd_udi_ingress.sat_interaction_http_request sihr
  ON hintr.hub_interaction_id = sihr.hub_interaction_id,
  LATERAL jsonb_array_elements(sihr.payload -> 'entry') entry(value)
  WHERE 
  hintr.key LIKE '/Bundle%'
  AND sihr.nature ->> 'nature' = 'Original FHIR Payload'
  GROUP BY 
  sihr.sat_interaction_http_request_id,
  sihr.hub_interaction_id
  WITH NO DATA;


CREATE UNIQUE INDEX IF NOT EXISTS interaction_http_request_resource_type_mat_sat_interaction_http_request_i_idx 
ON techbd_udi_ingress.interaction_http_request_resource_type_mat (sat_interaction_http_request_id);  

/*******************************************************************************************
This view extracts and computes observability metrics related to HTTP requests and their 
interactions.
******************************************************************************************/
DROP MATERIALIZED VIEW IF EXISTS techbd_udi_ingress.interaction_http_request_observe_mat CASCADE;
CREATE MATERIALIZED VIEW IF NOT EXISTS techbd_udi_ingress.interaction_http_request_observe_mat AS
SELECT sihr.sat_interaction_http_request_id AS sat_interaction_http_request_id,
sihr.hub_interaction_id AS hub_interaction_id,
headers.start_time,
headers.finish_time,
EXTRACT(epoch FROM headers.finish_time::timestamp without time zone - headers.start_time::timestamp without time zone) * 1000::numeric AS duration_millisecs,
(sihr.payload -> 'request'::text) ->> 'requestUri'::text AS uri
   FROM techbd_udi_ingress.sat_interaction_http_request sihr
     JOIN LATERAL ( SELECT max(
                CASE
                    WHEN (header.value ->> 'name'::text) = 'X-Observability-Metric-Interaction-Start-Time'::text THEN header.value ->> 'value'::text
                ELSE NULL::text
            END) AS start_time,
        max(
            CASE
                WHEN (header.value ->> 'name'::text) = 'X-Observability-Metric-Interaction-Finish-Time'::text THEN header.value ->> 'value'::text
                ELSE NULL::text
            END) AS finish_time
       FROM jsonb_array_elements((sihr.payload -> 'response'::text) -> 'headers'::text) header(value)) headers ON true
 WHERE 1 = 1 
 AND (sihr.nature ->> 'nature'::text) = 'org.techbd.service.http.Interactions$RequestResponseEncountered'::TEXT
 WITH NO DATA;

CREATE UNIQUE INDEX IF NOT EXISTS interaction_http_request_observe_mat_sat_interaction_http_request_i_idx 
ON techbd_udi_ingress.interaction_http_request_observe_mat (sat_interaction_http_request_id);
 

 
/*============================================================================================================
This view aggregates data from the hub_interaction and sat_interaction_http_request tables, extracting and 
transforming relevant fields from JSONB payloads. The view includes information about interaction IDs, 
bundle details, and patient resources. It generates unique row identifiers and timestamps for tracking. 
After creation, the view is indexed on several columns to optimize query performance. 
The view is refreshed to include up-to-date data, and indexing ensures efficient access to key fields.
============================================================================================================*/
DROP MATERIALIZED VIEW IF EXISTS techbd_udi_ingress.fhir_request_mat CASCADE;
CREATE MATERIALIZED VIEW IF NOT EXISTS techbd_udi_ingress.fhir_request_mat
TABLESPACE pg_default
AS
WITH extracted AS (
    SELECT 
        sat.hub_interaction_id,
        sat.sat_interaction_http_request_id,
        sat.payload->>'id' AS bundle_id,
        hub."key" AS uri,
        sat.nature ->> 'nature' AS nature,
        sat.nature ->> 'tenant_id' AS tenant_id,
        sat.payload->'meta'->>'lastUpdated' AS bundle_last_updated,
        sat.from_state,
        sat.to_state,
        sat.payload,
        sat.created_at
    FROM techbd_udi_ingress.hub_interaction hub
    INNER JOIN techbd_udi_ingress.sat_interaction_http_request sat
        ON hub.hub_interaction_id = sat.hub_interaction_id        
    WHERE 1 = 1      
        AND hub.key LIKE '/Bundle%'
),
patient_resources AS (
    SELECT
    	hub_interaction_id,
    	sat_interaction_http_request_id,
    	jsonb_path_query(payload, '$.entry[*].resource ? (@.resourceType == "Patient")') AS patient_resource
    FROM 
        extracted
),
patient_details AS (
    SELECT
    	hub_interaction_id,
    	sat_interaction_http_request_id,
        patient_resource->>'id' AS patient_id,
        (SELECT identifier->>'value'
         FROM jsonb_array_elements(patient_resource->'identifier') AS identifier
         WHERE identifier->'type'->'coding' @> '[{"code": "MR"}]' LIMIT 1) AS patient_mrn,
        jsonb_array_elements(patient_resource->'name') AS patient_name
    FROM 
        patient_resources
)
SELECT 
	gen_random_uuid() AS row_id,
    e.hub_interaction_id,
    e.sat_interaction_http_request_id,
    e.bundle_id,
    e.bundle_last_updated,
    e.uri,
    nature,
    tenant_id,
    pd.patient_id,
    pd.patient_mrn,
    e.payload,
    e.from_state,
    e.to_state,
    e.created_at,
    CURRENT_USER AS materialized_by,
    CURRENT_TIMESTAMP AS materialized_at
FROM 
    extracted e
LEFT OUTER JOIN 
    patient_details pd
ON e.sat_interaction_http_request_id = pd.sat_interaction_http_request_id -- Example: Adjust this based on the actual relationship
AND e.hub_interaction_id = pd.hub_interaction_id
WITH NO DATA; 
 
 
CREATE UNIQUE INDEX IF NOT EXISTS fhir_request_mat_row_id_idx ON techbd_udi_ingress.fhir_request_mat USING btree (row_id);
CREATE INDEX IF NOT EXISTS fhir_request_mat_created_at_idx ON techbd_udi_ingress.fhir_request_mat USING btree (created_at DESC);
CREATE INDEX IF NOT EXISTS fhir_request_mat_hub_id_idx ON techbd_udi_ingress.fhir_request_mat USING btree (hub_interaction_id);
CREATE INDEX IF NOT EXISTS fhir_request_mat_sat_id_idx ON techbd_udi_ingress.fhir_request_mat USING btree (sat_interaction_http_request_id);
CREATE INDEX IF NOT EXISTS fhir_request_mat_patient_id_idx ON techbd_udi_ingress.fhir_request_mat USING btree (patient_id);
CREATE INDEX IF NOT EXISTS fhir_request_mat_nature_idx ON techbd_udi_ingress.fhir_request_mat USING btree (nature);
CREATE INDEX IF NOT EXISTS fhir_request_mat_tenant_id_idx ON techbd_udi_ingress.fhir_request_mat USING btree (tenant_id);
CREATE INDEX IF NOT EXISTS fhir_request_mat_from_state_idx ON techbd_udi_ingress.fhir_request_mat USING btree (from_state);
CREATE INDEX IF NOT EXISTS fhir_request_mat_to_state_idx ON techbd_udi_ingress.fhir_request_mat USING btree (to_state);

